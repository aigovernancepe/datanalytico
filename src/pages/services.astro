---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { coreServices } from '../data/architecture';

const crumbs = [
  { label: 'Home', url: '/' },
  { label: 'Services', url: '/services' }
];
---

<BaseLayout title="Our Services â€” Datanalytico" description="Local SEO and digital marketing services for businesses across Switzerland.">
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4">Our Services</h1>
      <p class="text-white/75 text-lg">Local SEO and digital marketing services for businesses across Switzerland.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {coreServices.map(service => (
          <div>
            <h2 class="mb-4 pb-2 border-b-2 border-primary">
              <a href={`${import.meta.env.BASE_URL}${service.url.slice(1)}`} class="no-underline">{service.name}</a>
            </h2>
            <div class="flex flex-col gap-2">
              <a href={`${import.meta.env.BASE_URL}${service.url.slice(1)}`} class="flex items-center gap-2 p-4 bg-white border border-gray-200 rounded-lg hover:border-primary hover:shadow-md no-underline text-brand-text transition-all">
                {service.name} &rarr;
              </a>
              {service.children.map(child => (
                <a href={`${import.meta.env.BASE_URL}${child.url.slice(1)}`} class="flex items-center gap-2 p-4 pl-8 bg-white border border-gray-200 rounded-lg hover:border-primary hover:shadow-md no-underline text-brand-text text-[0.9375rem] transition-all">
                  {child.name} &rarr;
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
