---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const crumbs = [
  { label: 'Home', url: '/' },
  { label: '404 — Page Not Found', url: '#' }
];
---

<BaseLayout title="404 — Page Not Found | Datanalytico">
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4">404 — Page Not Found</h1>
      <p class="text-white/75 text-lg">The page you are looking for does not exist.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container text-center">
      <a href={`${import.meta.env.BASE_URL}`} class="text-lg font-semibold">&larr; Back to Home</a>
    </div>
  </div>
</BaseLayout>
