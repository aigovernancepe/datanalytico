---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';

const crumbs = [
  { label: 'Startseite', url: '/', i18nKey: 'breadcrumb.home' },
  { label: '404 — Seite nicht gefunden', url: '#', i18nKey: 'breadcrumb.404' }
];
---

<BaseLayout title="404 — Seite nicht gefunden | Datanalytico">
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4" data-i18n="404.title">404 — Seite nicht gefunden</h1>
      <p class="text-white/75 text-lg" data-i18n="404.desc">Die gesuchte Seite existiert nicht.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container text-center">
      <a href={`${import.meta.env.BASE_URL}`} class="text-lg font-semibold">&larr; <span data-i18n="404.back">Zurück zur Startseite</span></a>
    </div>
  </div>
</BaseLayout>
