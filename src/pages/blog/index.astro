---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { blogPosts } from '../../data/blogPosts';

const crumbs = [
  { label: 'Startseite', url: '/' },
  { label: 'Blog', url: '/blog' }
];
---

<BaseLayout title="Blog — Datanalytico" description="Local SEO Einblicke, Anleitungen und Tipps für Schweizer Unternehmen.">
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4">Blog</h1>
      <p class="text-white/75 text-lg" data-i18n="blog.desc">Local SEO Einblicke, Anleitungen und Tipps für Schweizer Unternehmen.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container max-w-[900px] mx-auto">
      <div class="flex flex-col gap-8">
        {blogPosts.map(post => (
          <article class="p-8 bg-white border border-gray-200 rounded-xl hover:border-primary transition-colors">
            <div class="flex gap-4 text-[0.8125rem] text-brand-text-light mb-2">
              <time datetime={post.date}>{new Date(post.date).toLocaleDateString('de-CH', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              <span class="uppercase tracking-wider text-primary font-semibold">{post.category}</span>
            </div>
            <h2 class="text-xl mb-2"><a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="text-brand-dark hover:text-primary no-underline" data-track-blog={post.title}>{post.title}</a></h2>
            <p class="text-brand-text-light text-[0.9375rem] mb-4">{post.description}</p>
            <a href={`${import.meta.env.BASE_URL}blog/${post.slug}`} class="font-semibold text-sm" data-track-blog={post.title}><span data-i18n="blog.readMore">Weiterlesen</span> &rarr;</a>
          </article>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
