---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import { business, coreServices, serviceAreas } from '../data/architecture';

const crumbs = [
  { label: 'Startseite', url: '/', i18nKey: 'breadcrumb.home' },
  { label: 'Kontakt', url: '/contact', i18nKey: 'breadcrumb.contact' }
];

const schema = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  mainEntity: { '@id': `https://${business.domain}/#business` }
};
---

<BaseLayout title={`Kontakt ${business.name} — Kostenlose SEO Beratung`} description="Kontaktieren Sie Datanalytico für eine kostenlose Local SEO Beratung." schema={schema}>
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4" data-i18n="contact.title">Kontakt {business.name}</h1>
      <p class="text-white/75 text-lg" data-i18n="contact.subtitle">Kontaktieren Sie uns für eine kostenlose Local SEO Beratung.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-[1fr_1.5fr] gap-12 max-w-[1000px] mx-auto">
        <!-- Contact Info -->
        <div>
          <div class="mb-8">
            <h3 class="text-[0.8125rem] uppercase tracking-wider text-brand-text-light mb-2" data-i18n="contact.phone">Telefon</h3>
            <a href={business.phoneTel} class="text-[1.375rem] font-bold text-primary no-underline" data-track-location="contact_page_sidebar">{business.phone}</a>
          </div>
          <div class="mb-8">
            <h3 class="text-[0.8125rem] uppercase tracking-wider text-brand-text-light mb-2" data-i18n="contact.email">E-Mail</h3>
            <a href={`mailto:${business.email}`}>{business.email}</a>
          </div>
          <div class="mb-8">
            <h3 class="text-[0.8125rem] uppercase tracking-wider text-brand-text-light mb-2" data-i18n="contact.location">Standort</h3>
            <p data-i18n="contact.locationCity">{business.city}, Schweiz</p>
          </div>
          <div class="mb-8">
            <h3 class="text-[0.8125rem] uppercase tracking-wider text-brand-text-light mb-2" data-i18n="contact.serviceAreas">Einzugsgebiete</h3>
            <div class="flex gap-2 flex-wrap">
              {serviceAreas.map(area => (
                <a href={`${import.meta.env.BASE_URL}areas/${area.toLowerCase()}`} class="px-3 py-1 border border-gray-200 rounded-full text-sm font-medium no-underline" data-track-area={area}>{area}</a>
              ))}
            </div>
          </div>
          <img
            src={`${import.meta.env.BASE_URL}brand/local-seo-experte-beratung-basel.webp`}
            alt="Local SEO Experte von Datanalytico bei einer persönlichen Beratung in Basel, Schweiz"
            width="480"
            height="594"
            loading="lazy"
            class="rounded-xl w-full hidden md:block"
          />
        </div>

        <!-- Form -->
        <div>
          <h2 class="mb-2" data-i18n="contact.form.title">Schreiben Sie uns</h2>
          <p class="text-brand-text-light mb-8" data-i18n="contact.form.desc">Erzählen Sie uns von Ihrem Unternehmen und Ihren Bedürfnissen. Wir antworten innerhalb eines Werktags.</p>
          <form class="flex flex-col gap-4" data-track-form="contact_page_form">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-semibold mb-1 text-brand-text" data-i18n="contact.form.name">Name</label>
                <input type="text" id="name" placeholder="Ihr Name" data-i18n-placeholder="contact.form.namePh" required class="w-full py-3 px-4 border border-gray-200 rounded-lg font-sans text-[0.9375rem] text-brand-text bg-white focus:outline-none focus:border-primary" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-semibold mb-1 text-brand-text" data-i18n="contact.form.phone">Telefon</label>
                <input type="tel" id="phone" placeholder="Ihre Telefonnummer" data-i18n-placeholder="contact.form.phonePh" required class="w-full py-3 px-4 border border-gray-200 rounded-lg font-sans text-[0.9375rem] text-brand-text bg-white focus:outline-none focus:border-primary" />
              </div>
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold mb-1 text-brand-text" data-i18n="contact.form.email">E-Mail</label>
              <input type="email" id="email" placeholder="ihre@email.com" data-i18n-placeholder="contact.form.emailPh" required class="w-full py-3 px-4 border border-gray-200 rounded-lg font-sans text-[0.9375rem] text-brand-text bg-white focus:outline-none focus:border-primary" />
            </div>
            <div>
              <label for="service" class="block text-sm font-semibold mb-1 text-brand-text" data-i18n="contact.form.service">Gewünschte Dienstleistung</label>
              <select id="service" required class="w-full py-3 px-4 border border-gray-200 rounded-lg font-sans text-[0.9375rem] text-brand-text bg-white focus:outline-none focus:border-primary">
                <option value="" disabled selected data-i18n="contact.form.servicePh">Dienstleistung auswählen</option>
                {coreServices.map(s => (
                  <option value={s.slug}>{s.name}</option>
                ))}
                <option value="other" data-i18n="contact.form.other">Andere</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-semibold mb-1 text-brand-text" data-i18n="contact.form.message">Nachricht</label>
              <textarea id="message" placeholder="Erzählen Sie uns von Ihrem Unternehmen und Ihren Zielen" data-i18n-placeholder="contact.form.messagePh" rows="4" class="w-full py-3 px-4 border border-gray-200 rounded-lg font-sans text-[0.9375rem] text-brand-text bg-white focus:outline-none focus:border-primary resize-y"></textarea>
            </div>
            <button type="submit" class="btn btn--accent btn--full" data-i18n="contact.form.submit">Nachricht senden</button>
          </form>
        </div>
      </div>

      <div class="flex justify-center gap-8 flex-wrap mt-12 pt-8 border-t border-gray-200 text-[0.8125rem] text-brand-text-light">
        <span data-i18n="contact.footer1">Kein Spam. Kein Verkaufsdruck.</span>
        <span data-i18n="contact.footer2">Kostenlose Erstberatung.</span>
        <span data-i18n="contact.footer3">Antwort innerhalb eines Werktags.</span>
      </div>
    </div>
  </div>
</BaseLayout>
