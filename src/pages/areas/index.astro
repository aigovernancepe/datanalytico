---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import { cities, business } from '../../data/architecture';

const crumbs = [
  { label: 'Startseite', url: '/' },
  { label: 'Einzugsgebiete', url: '/areas' }
];
---

<BaseLayout title="Einzugsgebiete — Local SEO in der Schweiz" description={`Mit Sitz in ${business.city}, betreuen wir Unternehmen in Basel, Zürich und Bern.`}>
  <Breadcrumb crumbs={crumbs} />

  <section class="bg-brand-dark text-white py-16 text-center">
    <div class="container">
      <h1 class="text-white mb-4" data-i18n="areas.title">Einzugsgebiete — Local SEO in der Schweiz</h1>
      <p class="text-white/75 text-lg" data-i18n="areas.desc">Mit Sitz in {business.city}, betreuen wir Unternehmen in Basel, Zürich und Bern.</p>
    </div>
  </section>

  <div class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {cities.map(city => (
          <div class="bg-white border border-gray-200 rounded-xl p-8 hover:border-primary hover:shadow-md transition-all">
            <h3 class="mb-2"><a href={`${import.meta.env.BASE_URL}areas/${city.slug}`} class="no-underline">{city.name}</a></h3>
            <p class="text-brand-text-light text-[0.9375rem] mb-4">{city.description}</p>
            <div class="flex flex-wrap gap-2">
              {city.services.map(svc => (
                <a href={`${import.meta.env.BASE_URL}areas/${city.slug}/${svc.slug}`} class="inline-block px-3 py-1 bg-gray-100 rounded-full text-[0.8125rem] text-primary hover:bg-primary hover:text-white no-underline transition-all">
                  {svc.name}
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
