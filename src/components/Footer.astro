---
import { business, serviceAreas } from '../data/architecture';
const year = new Date().getFullYear();
---

<footer class="bg-brand-dark text-white/80 pt-16 pb-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand + Contact -->
      <div>
        <a href={`${import.meta.env.BASE_URL}`} class="flex items-center no-underline mb-5">
          <img
            src={`${import.meta.env.BASE_URL}brand/Logo_datanalytico_linksbuendig.png`}
            alt="datanalytico.com"
            class="h-9 w-auto brightness-0 invert"
          />
        </a>
        <div class="text-white font-semibold text-[0.9375rem]">Datanalytico Feye</div>
        <div class="text-white text-[0.9375rem] mt-1">CHE-220.283.724</div>
        <div class="mt-2 text-lg font-bold">
          <a href={business.phoneTel} class="text-accent hover:text-accent-light no-underline">+41 76 757 64 23</a>
        </div>
        <div class="mt-1 text-[0.9375rem]">
          <a href={`mailto:${business.email}`} class="text-white hover:text-white/80 no-underline">info@datanalytico.com</a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.quickLinks">Schnellzugriff</h4>
        <div class="flex flex-col gap-2">
          <a href={`${import.meta.env.BASE_URL}`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.home">Startseite</a>
          <a href={`${import.meta.env.BASE_URL}services`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.services">Dienstleistungen</a>
          <a href={`${import.meta.env.BASE_URL}about`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.about">Über uns</a>
          <a href={`${import.meta.env.BASE_URL}contact`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.contact">Kontakt</a>
          <a href={`${import.meta.env.BASE_URL}blog`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline">Blog</a>
        </div>
      </div>

      <!-- Service Areas -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.serviceAreas">Einzugsgebiete</h4>
        <div class="flex flex-wrap gap-2">
          {serviceAreas.map(area => (
            <a href={`${import.meta.env.BASE_URL}areas/${area.toLowerCase()}`} class="inline-block px-3 py-1 border border-white/20 rounded-full text-[0.8125rem] text-white/70 hover:border-primary hover:text-white no-underline transition-all">
              {area}
            </a>
          ))}
        </div>
      </div>

      <!-- Social -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.followUs">Folgen Sie uns</h4>
        <div class="flex gap-4 mt-4">
          <a href="#" target="_blank" aria-label="LinkedIn" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="https://share.google/gVIyatWDIF7yoacAq" target="_blank" aria-label="Google Business Profile" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 11.5v4.3h6.1c-.3 1.5-1.1 2.7-2.3 3.5l3.7 2.9c2.2-2 3.4-5 3.4-8.5 0-.8-.1-1.6-.2-2.3H12z"/><path d="M5.3 14.3l-.8.6-2.9 2.3C3.5 20.6 7.4 23 12 23c3.2 0 5.9-1.1 7.9-2.9l-3.7-2.9c-1.1.7-2.5 1.1-4.1 1.1-3.2 0-5.8-2.1-6.8-5z"/><path d="M1.6 6.7C.6 8.7 0 10.8 0 13s.6 4.3 1.6 6.3l3.7-2.9C4.8 15.2 4.5 14.1 4.5 13s.3-2.2.8-3.2L1.6 6.7z"/><path d="M12 4.8c1.8 0 3.4.6 4.6 1.8l3.5-3.5C18 1.2 15.2 0 12 0 7.4 0 3.5 2.4 1.6 6.7l3.7 2.9C6.2 6.9 8.8 4.8 12 4.8z"/></svg>
          </a>
          <a href="https://de.yelp.ch/biz/datanalytico-oberwil" target="_blank" aria-label="Yelp" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M20.16 12.594l-4.995 1.433c-.96.276-1.74-.8-1.176-1.63l2.905-4.308a1.072 1.072 0 0 1 1.596-.206 9.194 9.194 0 0 1 2.364 3.252 1.073 1.073 0 0 1-.694 1.459zm-3.005 5.69a1.073 1.073 0 0 1-1.552.35 9.1 9.1 0 0 1-2.678-3.035 1.073 1.073 0 0 1 .56-1.517l4.907-1.72c.934-.328 1.81.658 1.322 1.49l-2.559 4.432zm-6.659-.595l-.924 5.122c-.176.978-1.478 1.09-1.966.168a9.2 9.2 0 0 1-.773-3.936 1.073 1.073 0 0 1 .96-1.125l5.212-.56c.992-.107 1.382 1.123.58 1.611l-3.089.72zm-1.586-3.853c-.207.933-1.538.902-1.703-.04L5.536 8.25a1.073 1.073 0 0 1 .792-1.333 9.2 9.2 0 0 1 4.031.052 1.073 1.073 0 0 1 .756 1.264l-1.205 5.603zm.74-7.485l-3.24-3.94c-.617-.75.115-1.836 1.108-1.642A9.137 9.137 0 0 1 11.2 3.36c.396.47.394 1.153-.004 1.62L8.91 7.851c-.56.66-1.564.27-1.562-.548l.302.048z"/></svg>
          </a>
          <a href="#" target="_blank" aria-label="Instagram" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/></svg>
          </a>
        </div>
      </div>
    </div>

    <div class="pt-8 border-t border-white/10 text-center text-[0.8125rem] text-white/50">
      <div>&copy; 2024–{year} {business.name}. <span data-i18n="footer.rights">Alle Rechte vorbehalten.</span></div>
      <button
        onclick="if(window.openCookieBanner)window.openCookieBanner()"
        class="mt-2 text-white/40 hover:text-white/70 text-[0.75rem] underline cursor-pointer bg-transparent border-0 p-0"
        data-i18n="footer.cookieSettings"
      >Cookie-Einstellungen</button>
    </div>
  </div>
</footer>
