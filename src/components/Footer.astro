---
import { business, serviceAreas } from '../data/architecture';
const year = new Date().getFullYear();
---

<footer class="bg-brand-dark text-white/80 pt-16 pb-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand + Contact -->
      <div>
        <a href={`${import.meta.env.BASE_URL}`} class="flex items-center no-underline mb-5">
          <img
            src={`${import.meta.env.BASE_URL}brand/Logo_datanalytico_linksbuendig.png`}
            alt="datanalytico.com"
            class="h-9 w-auto brightness-0 invert"
          />
        </a>
        <div class="text-xl font-bold">
          <a href={business.phoneTel} class="text-accent hover:text-accent-light no-underline">{business.phone}</a>
        </div>
        <div class="mt-3 text-[0.9375rem]">
          <a href={`mailto:${business.email}`} class="text-white/80 hover:text-white no-underline">{business.email}</a>
        </div>
        <div class="text-[0.9375rem] mt-2">
          {business.city}, Schweiz
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.quickLinks">Schnellzugriff</h4>
        <div class="flex flex-col gap-2">
          <a href={`${import.meta.env.BASE_URL}`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.home">Startseite</a>
          <a href={`${import.meta.env.BASE_URL}services`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.services">Dienstleistungen</a>
          <a href={`${import.meta.env.BASE_URL}about`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.about">Über uns</a>
          <a href={`${import.meta.env.BASE_URL}contact`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline" data-i18n="footer.contact">Kontakt</a>
          <a href={`${import.meta.env.BASE_URL}blog`} class="text-white/70 text-[0.9375rem] hover:text-white no-underline">Blog</a>
        </div>
      </div>

      <!-- Service Areas -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.serviceAreas">Einzugsgebiete</h4>
        <div class="flex flex-wrap gap-2">
          {serviceAreas.map(area => (
            <a href={`${import.meta.env.BASE_URL}areas/${area.toLowerCase()}`} class="inline-block px-3 py-1 border border-white/20 rounded-full text-[0.8125rem] text-white/70 hover:border-primary hover:text-white no-underline transition-all">
              {area}
            </a>
          ))}
        </div>
      </div>

      <!-- Social -->
      <div>
        <h4 class="text-white text-sm font-bold uppercase tracking-wider mb-6" data-i18n="footer.followUs">Folgen Sie uns</h4>
        <div class="flex gap-4 mt-4">
          <a href="#" aria-label="Facebook" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 text-[0.8125rem] font-semibold hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">FB</a>
          <a href="#" aria-label="LinkedIn" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 text-[0.8125rem] font-semibold hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">LI</a>
          <a href="#" aria-label="Google Business Profile" rel="noopener noreferrer" class="flex items-center justify-center w-9 h-9 border border-white/20 rounded-full text-white/70 text-[0.8125rem] font-semibold hover:border-primary hover:text-white hover:bg-primary no-underline transition-all">G</a>
        </div>
      </div>
    </div>

    <div class="pt-8 border-t border-white/10 text-center text-[0.8125rem] text-white/50">
      &copy; 2024–{year} {business.name}. <span data-i18n="footer.rights">Alle Rechte vorbehalten.</span>
    </div>
  </div>
</footer>
