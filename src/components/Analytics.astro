---
// Google Analytics 4 (GA4) integration
// Replace GA_MEASUREMENT_ID with your actual GA4 measurement ID (e.g., G-XXXXXXXXXX)
const GA_MEASUREMENT_ID = 'G-XXXXXXXXXX';
---

<!-- Google Analytics 4 -->
<script is:inline define:vars={{ GA_MEASUREMENT_ID }}>
  window.GA_MEASUREMENT_ID = GA_MEASUREMENT_ID;
</script>
<script is:inline src={`https://www.googletagmanager.com/gtag/js?id=${GA_MEASUREMENT_ID}`} async></script>
<script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', window.GA_MEASUREMENT_ID, {
    send_page_view: true,
    cookie_flags: 'SameSite=None;Secure'
  });
</script>
