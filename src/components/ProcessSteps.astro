---
interface Props {
  steps: { title: string; description: string }[];
}

const { steps } = Astro.props;
---

<div class="process-grid">
  {steps.map((step: any, i: number) => (
    <div class="process-step">
      <div class="process-card">
        <div class="process-number-row">
          <div class="process-number">{i + 1}</div>
          <span class="process-label">Schritt {i + 1}</span>
        </div>
        <h3 class="process-title">{step.title}</h3>
        <p class="process-desc">{step.description}</p>
      </div>
    </div>
  ))}
</div>

<style>
  .process-grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  @media (min-width: 640px) {
    .process-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .process-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.25rem;
    }
  }

  .process-step {
    position: relative;
    min-width: 0;
  }

  /* Connector chevron between steps on desktop */
  @media (min-width: 1024px) {
    .process-step:not(:last-child)::after {
      content: '';
      position: absolute;
      top: 2.25rem;
      right: -0.8125rem;
      width: 0.5rem;
      height: 0.5rem;
      border-top: 2px solid #048caa;
      border-right: 2px solid #048caa;
      transform: rotate(45deg);
      opacity: 0.35;
    }
  }

  .process-card {
    background: #ffffff;
    border-radius: 1rem;
    padding: 1.75rem;
    border: 1px solid rgba(0, 0, 0, 0.05);
    box-shadow:
      0 1px 2px rgba(0, 0, 0, 0.03),
      0 4px 16px rgba(0, 0, 0, 0.04);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    height: 100%;
    position: relative;
    overflow: hidden;
    overflow-wrap: break-word;
    display: flex;
    flex-direction: column;
  }

  .process-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #048caa, #05a8cc);
    opacity: 0;
    transition: opacity 0.25s ease;
  }

  .process-card:hover {
    transform: translateY(-3px);
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.04),
      0 12px 32px rgba(0, 0, 0, 0.07);
  }

  .process-card:hover::before {
    opacity: 1;
  }

  .process-number-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .process-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 0.75rem;
    background: rgba(4, 140, 170, 0.08);
    color: #048caa;
    font-weight: 700;
    font-size: 1.125rem;
    flex-shrink: 0;
  }

  .process-label {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #6B7280;
  }

  .process-title {
    font-size: 1.0625rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #0E1A2D;
    line-height: 1.35;
  }

  .process-desc {
    font-size: 0.9375rem;
    line-height: 1.65;
    color: #6B7280;
    margin-bottom: 0;
    flex: 1;
  }
</style>
